/* ======================================= */
/* CSS cho Bản đồ liên hệ (Contact Map)    */
/* ======================================= */

.contact-map {
    /* Thêm khoảng cách với phần bên trên */
    margin-top: 3rem;
}

.map-container {
    position: relative; /* Quan trọng để .map-overlay có thể nằm đè lên */
    width: 100%;
    height: 450px; /* Đặt chiều cao cố định cho bản đồ */
    
    /* Sử dụng các biến CSS bạn đã có */
    border-radius: var(--radius-lg); 
    box-shadow: var(--shadow-xl);
    
    /* Đảm bảo bản đồ bên trong cũng bị bo góc */
    overflow: hidden; 
}

/* Áp dụng cho iframe bản đồ */
.map-container iframe {
    width: 100%;
    height: 100%;
    border: 0;
}

/* Hộp thông tin địa chỉ đè lên bản đồ */
.map-overlay {
    position: absolute;
    bottom: 20px;
    left: 20px;
    
    /* Hiệu ứng "kính mờ" (glassmorphism) */
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    
    border-radius: var(--radius);
    padding: 1rem 1.5rem;
    box-shadow: var(--shadow-lg);
    
    /* Sắp xếp icon và chữ */
    display: flex;
    align-items: center;
    gap: 1rem;
    
    /* Ngăn người dùng nhấn vào hộp này và làm di chuyển bản đồ */
    pointer-events: none;
}

/* Định dạng cho icon ghim */
.map-pin {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    
    /* Dùng màu chủ đạo của bạn */
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: var(--white);
    
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    box-shadow: var(--shadow-color);
}

/* Định dạng cho chữ trong hộp */
.map-overlay p {
    margin: 0;
    color: var(--primary-dark);
    font-weight: 700;
    font-size: 1rem;
}

/* ======================================= */
/* CSS Responsive cho Bản đồ              */
/* ======================================= */

@media (max-width: 768px) {
    .map-container {
        /* Giảm chiều cao bản đồ trên di động */
        height: 350px; 
    }
    
    .map-overlay {
        /* Đặt hộp thông tin ở giữa, nhỏ hơn */
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
        max-width: 300px;
        bottom: 15px;
        padding: 0.8rem 1rem;
        justify-content: center;
    }

    .map-overlay p {
        font-size: 0.9rem;
    }
}