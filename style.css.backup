    background: var(--white);
    position: relative;
}

.team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
    margin-top: 3rem;
}

.team-member {
    background: var(--white);
    border-radius: var(--radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow);
    border: 1px solid rgba(30, 126, 52, 0.08);
    text-align: center;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.team-member::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
}

.team-member:hover {
    transform: translateY(-15px);
    box-shadow: var(--shadow-xl);
}

.member-photo {
    position: relative;
    width: 150px;
    height: 150px;
    margin: 0 auto 1.5rem auto;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid var(--bg-section);
    transition: var(--transition);
}

.member-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
}

.member-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(30, 126, 52, 0.8), rgba(255, 107, 53, 0.8));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: var(--transition);
}

.team-member:hover .member-overlay {
    opacity: 1;
}

.team-member:hover .member-photo {
    border-color: var(--primary-color);
}

.team-member:hover .member-photo img {
    transform: scale(1.1);
}

.member-social {
    display: flex;
    gap: 1rem;
}

.social-btn {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    text-decoration: none;
    transition: var(--transition);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.social-btn:hover {
    background: var(--white);
    color: var(--primary-color);
    transform: scale(1.1);
}

.member-info h3 {
    color: var(--primary-color);
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    font-family: 'Poppins', sans-serif;
}

.member-position {
    color: var(--accent-color);
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.member-description {
    color: var(--text-light);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
}

.member-achievements {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
}

.achievement {
    background: var(--bg-section);
    color: var(--primary-color);
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 600;
    border: 1px solid rgba(30, 126, 52, 0.2);
}

/* Team Stats */
.team-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
    padding: 3rem;
    background: linear-gradient(135deg, var(--bg-section), var(--bg-light));
    border-radius: var(--radius-lg);
    border: 1px solid rgba(30, 126, 52, 0.1);
}

.team-stat {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem;
    background: var(--white);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
}

.team-stat:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow);
}

.stat-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-size: 1.5rem;
    flex-shrink: 0;
}

.stat-info {
    flex: 1;
}

.team-stat .stat-number {
    font-size: 2rem;
    font-weight: 800;
    color: var(--primary-color);
    font-family: 'Poppins', sans-serif;
    line-height: 1;
    margin-bottom: 0.3rem;
}

.team-stat .stat-label {
    color: var(--text-light);
    font-size: 0.9rem;
    font-weight: 500;
    line-height: 1.2;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .team-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .team-stats {
        grid-template-columns: 1fr;
        gap: 1.5rem;
        padding: 2rem;
        margin-top: 3rem;
    }
    
    .team-stat {
        padding: 1.2rem;
    }
    
    .member-photo {
        width: 120px;
        height: 120px;
    }
    
    .member-info h3 {
        font-size: 1.2rem;
    }
}

@media (max-width: 480px) {
    .team-member {
        padding: 1.5rem;
    }
    
    .member-photo {
        width: 100px;
        height: 100px;
    }
    
    .team-stats {
        padding: 1.5rem;
    }
    
    .team-stat {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
        padding: 1rem;
    }
    
    .stat-icon {
        width: 50px;
        height: 50px;
        font-size: 1.2rem;
    }
}


/* Blog Section Styles */
.blog {
    background: var(--white);
    position: relative;
}

/* Featured Article */
.featured-article {
    background: var(--white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    margin-bottom: 4rem;
    overflow: hidden;
    border: 1px solid rgba(30, 126, 52, 0.1);
    transition: var(--transition);
}

.featured-article:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
}

.featured-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    align-items: stretch;
}

.featured-image {
    position: relative;
    overflow: hidden;
    height: 400px;
}

.featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
}

.featured-article:hover .featured-image img {
    transform: scale(1.05);
}

.featured-badge {
    position: absolute;
    top: 1.5rem;
    left: 1.5rem;
    background: linear-gradient(135deg, var(--accent-color), var(--accent-light));
    color: var(--white);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 2;
}

.featured-text {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.featured-text h3 {
    color: var(--primary-color);
    font-size: 1.8rem;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 1rem;
    font-family: 'Poppins', sans-serif;
}

.featured-text p {
    color: var(--text-light);
    line-height: 1.7;
    margin-bottom: 2rem;
    font-size: 1.05rem;
}

/* Article Meta */
.article-meta {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
}

.article-category {
    background: var(--primary-color);
    color: var(--white);
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.article-date,
.article-read-time {
    color: var(--text-muted);
    font-size: 0.85rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.3rem;
}

.article-date::before {
    content: '📅';
}

.article-read-time::before {
    content: '⏱️';
}

/* Article Tags */
.article-tags {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
}

.tag {
    background: var(--bg-section);
    color: var(--primary-color);
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 600;
    border: 1px solid rgba(30, 126, 52, 0.2);
    transition: var(--transition);
}

.tag:hover {
    background: var(--primary-color);
    color: var(--white);
}

/* Read More Button */
.read-more-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    color: var(--primary-color);
    font-weight: 600;
    text-decoration: none;
    padding: 1rem 2rem;
    border: 2px solid var(--primary-color);
    border-radius: 50px;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    align-self: flex-start;
}

.read-more-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: var(--primary-color);
    transition: left 0.4s ease;
    z-index: -1;
}

.read-more-btn:hover::before {
    left: 0;
}

.read-more-btn:hover {
    color: var(--white);
    transform: translateY(-2px);
}

.read-more-btn i {
    transition: var(--transition);
}

.read-more-btn:hover i {
    transform: translateX(5px);
}

/* Articles Grid */
.articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 2.5rem;
    margin-bottom: 4rem;
}

/* Article Card */
.article-card {
    background: var(--white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow);
    overflow: hidden;
    transition: var(--transition);
    border: 1px solid rgba(30, 126, 52, 0.08);
    position: relative;
    cursor: pointer;
}

.article-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-xl);
}

.article-image {
    position: relative;
    height: 200px;
    overflow: hidden;
}

.article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
}

.article-card:hover .article-image img {
    transform: scale(1.1);
}

.article-category-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(255, 255, 255, 0.95);
    color: var(--primary-color);
    padding: 0.4rem 0.8rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(30, 126, 52, 0.2);
}

.article-content {
    padding: 2rem;
    position: relative;
}

.article-content h4 {
    color: var(--primary-color);
    font-size: 1.2rem;
    font-weight: 700;
    line-height: 1.4;
    margin-bottom: 1rem;
    font-family: 'Poppins', sans-serif;
    transition: var(--transition);
}

.article-card:hover .article-content h4 {
    color: var(--accent-color);
}

.article-content p {
    color: var(--text-light);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
}

.article-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(30, 126, 52, 0.1);
}

.article-author {
    display: flex;
    align-items: center;
    gap: 0.8rem;
}

.author-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--bg-section);
}

.article-author span {
    color: var(--text-light);
    font-size: 0.85rem;
    font-weight: 500;
}

.bookmark-btn {
    background: none;
    border: none;
    color: var(--text-muted);
    font-size: 1.2rem;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 50%;
    transition: var(--transition);
}

.bookmark-btn:hover {
    background: var(--bg-section);
    color: var(--accent-color);
    transform: scale(1.1);
}

.bookmark-btn.bookmarked {
    color: var(--accent-color);
}

.bookmark-btn.bookmarked i {
    font-weight: 900;
}

.article-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

/* Newsletter Section */
.newsletter-section {
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light), var(--secondary-color));
    color: var(--white);
    border-radius: var(--radius-lg);
    padding: 3rem;
    margin-bottom: 3rem;
    position: relative;
    overflow: hidden;
}

.newsletter-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="newsletter-pattern" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100%" height="100%" fill="url(%23newsletter-pattern)"/></svg>');
    opacity: 0.3;
}

.newsletter-content {
    position: relative;
    z-index: 1;
    text-align: center;
}

.newsletter-content h3 {
    color: var(--white);
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    font-family: 'Poppins', sans-serif;
}

.newsletter-content p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.newsletter-form {
    max-width: 500px;
    margin: 0 auto;
}

.newsletter-input-group {
    display: flex;
    gap: 0;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 50px;
    padding: 0.5rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.newsletter-input-group input {
    flex: 1;
    border: none;
    background: transparent;
    color: var(--white);
    padding: 1rem 1.5rem;
    font-size: 1rem;
    border-radius: 50px;
}

.newsletter-input-group input::placeholder {
    color: rgba(255, 255, 255, 0.7);
}

.newsletter-input-group input:focus {
    outline: none;
}

.newsletter-input-group button {
    background: linear-gradient(135deg, var(--accent-color), var(--accent-light));
    color: var(--white);
    border: none;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
}

.newsletter-input-group button:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow);
}

/* Blog Navigation */
.blog-navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0;
    border-top: 1px solid rgba(30, 126, 52, 0.1);
}

.blog-nav-btn {
    background: var(--bg-section);
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: 0.8rem;
    font-size: 0.95rem;
}

.blog-nav-btn:hover {
    background: var(--primary-color);
    color: var(--white);
    transform: translateY(-2px);
}

.blog-nav-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: var(--transition);
    font-size: 0.95rem;
}

.blog-nav-link:hover {
    color: var(--accent-color);
}

.blog-nav-link i {
    transition: var(--transition);
}

.blog-nav-link:hover i {
    transform: translateX(5px);
}

/* Article Modal Styles */
.article-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10003;
    padding: 2rem;
    backdrop-filter: blur(5px);
}

.article-modal-content {
    background: var(--white);
    border-radius: var(--radius-lg);
    max-width: 800px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: var(--shadow-xl);
    animation: articleModalSlideIn 0.4s ease-out;
}

@keyframes articleModalSlideIn {
    from { 
        opacity: 0; 
        transform: translateY(-50px) scale(0.95); 
    }
    to { 
        opacity: 1; 
        transform: translateY(0) scale(1); 
    }
}

.article-modal-header {
    padding: 2rem 2rem 1rem 2rem;
    border-bottom: 1px solid rgba(30, 126, 52, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
}

.article-modal-title {
    color: var(--primary-color);
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.3;
    font-family: 'Poppins', sans-serif;
}

.article-modal-close {
    background: none;
    border: none;
    font-size: 2rem;
    color: var(--text-light);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 50%;
    transition: var(--transition);
    flex-shrink: 0;
}

.article-modal-close:hover {
    background: var(--bg-section);
    color: var(--primary-color);
    transform: rotate(90deg);
}

.article-modal-body {
    padding: 2rem;
}

.article-modal-meta {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(30, 126, 52, 0.1);
}

.article-modal-content-text {
    color: var(--text-dark);
    line-height: 1.8;
    font-size: 1.05rem;
}

.article-modal-content-text h3 {
    color: var(--primary-color);
    font-weight: 700;
    margin: 2rem 0 1rem 0;
    font-size: 1.3rem;
}

.article-modal-content-text p {
    margin-bottom: 1.5rem;
}

.article-modal-content-text ul {
    margin: 1.5rem 0;
    padding-left: 2rem;
}

.article-modal-content-text li {
    margin-bottom: 0.8rem;
    color: var(--text-light);
}

/* Responsive Design for Blog Section */
@media (max-width: 1024px) {
    .featured-content {
        grid-template-columns: 1fr;
    }
    
    .featured-image {
        height: 300px;
    }
    
    .featured-text {
        padding: 2.5rem;
    }
    
    .articles-grid {
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
    }
}

@media (max-width: 1200px) {
    .featured-text {
        padding: 2rem;
    }
    
    .featured-text h3 {
        font-size: 1.5rem;
    }
    
    .articles-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .article-content {
        padding: 1.5rem;
    }
    
    .newsletter-section {
        padding: 2rem;
    }
    
    .newsletter-content h3 {
        font-size: 1.6rem;
    }
    
    .newsletter-input-group {
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        border-radius: var(--radius);
    }
    
    .newsletter-input-group input,
    .newsletter-input-group button {
        border-radius: var(--radius);
    }
    
    .blog-navigation {
        flex-direction: column;
        gap: 1.5rem;
        text-align: center;
    }
    
    .article-modal {
        padding: 1rem;
    }
    
    .article-modal-content {
        max-height: 95vh;
    }
    
    .article-modal-header {
        padding: 1.5rem;
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .article-modal-close {
        align-self: flex-end;
    }
    
    .article-modal-body {
        padding: 1.5rem;
    }
    
    .article-modal-title {
        font-size: 1.5rem;
    }
}

@media (max-width: 480px) {
    .featured-text {
        padding: 1.5rem;
    }
    
    .featured-text h3 {
        font-size: 1.3rem;
    }
    
    .article-content {
        padding: 1.2rem;
    }
    
    .article-meta {
        flex-direction: column;
        gap: 0.8rem;
    }
    
    .newsletter-section {
        padding: 1.5rem;
    }
    
    .newsletter-content h3 {
        font-size: 1.4rem;
    }
    
    .newsletter-content p {
        font-size: 1rem;
    }
    
    .blog-nav-btn,
    .blog-nav-link {
        font-size: 0.9rem;
    }
    
    .article-modal-header,
    .article-modal-body {
        padding: 1.2rem;
    }
}

/* Loading Animation for Articles */
.article-loading {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 3rem;
}

.article-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid var(--bg-section);
    border-top: 3px solid var(--primary-color);
    border-radius: 50%;
    animation: articleSpin 1s linear infinite;
}

@keyframes articleSpin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Success/Error States */
.newsletter-success {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: var(--white);
    padding: 1rem 2rem;
    border-radius: var(--radius);
    text-align: center;
    margin-top: 1rem;
    animation: slideInUp 0.3s ease-out;
}

.newsletter-error {
    background: linear-gradient(135deg, #dc3545, #fd7e14);
    color: var(--white);
    padding: 1rem 2rem;
    border-radius: var(--radius);
    text-align: center;
    margin-top: 1rem;
    animation: slideInUp 0.3s ease-out;
}

@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Accessibility Improvements */
