    text-shadow: 0 2px 10px rgba(0,0,0,0.2);
}

.hero-bottom-text h2 {
    font-size: 1.2rem;
    color: var(--white);
    font-weight: 600;
    padding: 1rem 1.5rem;
    background: rgba(40, 167, 69, 0.15);
    border-left: 4px solid var(--accent-color);
    border-radius: 8px;
    margin-bottom: 2rem;
    backdrop-filter: blur(10px);
}

/* CTA Button */
.hero-cta-wrapper {
    margin-top: 2rem;
}

.btn-product-quote {
    display: inline-flex;
    align-items: center;
    gap: 1.2rem;
    padding: 1.2rem 2rem;
    background: linear-gradient(135deg, var(--accent-color), var(--accent-light));
    color: var(--white);
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    box-shadow: 0 10px 40px rgba(255, 107, 53, 0.4);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

