/* --- Product Showcase Section --- */
.product-showcase {
    background: var(--white);
    /* FIX: Bỏ overflow: hidden để không cắt mất các hộp chú thích */
}

.showcase-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-top: 4rem;
}

/* --- 3D Visual Side --- */
.showcase-visual {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 500px;
    padding: 0 4rem; /* FIX: Thêm padding để tạo không gian cho callout */
}

.visual-3d-container {
    position: relative;
    width: 100%;
    max-width: 450px; /* Giảm kích thước một chút để có thêm không gian */
    transform-style: preserve-3d;
    perspective: 1200px;
}

.main-product-image {
    width: 100%;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
   
    transition: var(--transition-slow);
}

.visual-3d-container:hover .main-product-image {
    transform: rotateY(0deg) rotateX(0deg) translateZ(0) scale(1.05);
    box-shadow: 0 40px 100px rgba(0,0,0,0.2);
}

.feature-callout {
    position: absolute;
    transform-style: preserve-3d;
    transition: var(--transition);
    z-index: 10;
}

.callout-content {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(15px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius);
    padding: 1rem 1.2rem;
    box-shadow: var(--shadow-lg);
    width: 220px;
    color: var(--text-dark);
}

.callout-content h5 {
    color: var(--primary-dark);
    font-weight: 700;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
}

.callout-content p {
    font-size: 0.8rem;
    line-height: 1.5;
    color: var(--text-light);
    margin: 0;
}

.callout-dot {
    position: absolute;
    width: 12px;
    height: 12px;
    background: var(--accent-color);
    border-radius: 50%;
    border: 2px solid var(--white);
    box-shadow: 0 0 10px var(--accent-color);
    z-index: 1;
}

.callout-line {
    position: absolute;
    background: linear-gradient(to right, transparent, var(--accent-light));
    opacity: 0.7;
    height: 2px;
}

/* FIX: Điều chỉnh lại toàn bộ vị trí để bố cục hợp lý hơn */
.callout-1 {
    top: 5%;
    left: 0;
    transform: translateX(-80%) translateZ(50px);
}
.callout-1 .callout-dot { right: -6px; top: 50%; transform: translateY(-50%); }
.callout-1 .callout-line { right: 0; top: 50%; width: 30%; height: 2px; background: linear-gradient(to right, var(--accent-light), transparent); transform: translateX(100%); }


.callout-2 {
    bottom: 10%;
    left: 0;
    transform: translateX(-65%) translateZ(-20px);
}
.callout-2 .callout-dot { right: -6px; top: 50%; transform: translateY(-50%); }
.callout-2 .callout-line { right: 0; top: 50%; width: 25%; height: 2px; background: linear-gradient(to right, var(--accent-light), transparent); transform: translateX(100%); }

.callout-3 {
    top: 35%;
    right: 0;
    transform: translateX(80%) translateZ(30px);
}
.callout-3 .callout-content { text-align: left; }
.callout-3 .callout-dot { left: -6px; top: 50%; transform: translateY(-50%); }
.callout-3 .callout-line { left: 0; top: 50%; width: 30%; height: 2px; transform: translateX(-100%);}


.visual-3d-container:hover .feature-callout {
    transform: translateX(0) translateZ(0);
}

