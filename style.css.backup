    box-shadow: var(--shadow-xl);
}

.product-image {
    width: 100%;
    /* SỬA: Đặt chiều cao cố định (ví dụ 250px) */
    height: 250px; 
    overflow: hidden;
    flex-shrink: 0; /* Ngăn ảnh bị co lại khi nội dung info quá dài */
}

.product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition-slow); /* Thêm hiệu ứng zoom */
}

/* Thêm hiệu ứng zoom ảnh khi hover card */
.product-card:hover .product-image img {
    transform: scale(1.05);
}

.product-info {
    padding: 1.5rem;
    text-align: center;
    
    /* SỬA: Cấu hình flex cho info */
    flex-grow: 1; /* Cho phép phần info giãn ra để lấp đầy card */
    display: flex;
    flex-direction: column;
}

.product-info h3 {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 1rem;
}

.product-info p {
    font-size: 0.95rem;
    color: var(--text-light);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    /* SỬA: Cho phép mô tả giãn ra */
    flex-grow: 1;
}

.product-info .btn {
    padding: 0.8rem 1.5rem;
    font-size: 0.9rem;
    border-radius: 50px;
    transition: var(--transition);
    
    /* Thêm các thuộc tính .btn cơ bản (vì bạn dùng .btn-primary) */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    cursor: pointer;
    border: none;
    
    /* Style cho .btn-primary (giả sử kế thừa từ .btn) */
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    color: var(--white);
    
    /* SỬA: Đảm bảo nút ở cuối cùng */
    margin-top: auto; /* Đẩy nút xuống dưới cùng */
    align-self: center; /* Căn giữa nút */
}

.product-info .btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-color); /* Dùng shadow-color đẹp hơn */
}

/* Responsive Adjustments */
@media (max-width: 1024px) {
    .products-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
    .product-image {
